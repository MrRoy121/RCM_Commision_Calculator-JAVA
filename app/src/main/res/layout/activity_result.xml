<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".ResultsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:id="@+id/scren"
        tools:context=".ResultsActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00cf8f">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center_vertical"
            android:text="Total Performance Bonus"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="#DFDFDF"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center"
            android:text="P.V."
            android:textColor="#000000"
            android:textSize="14sp" />


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Rate"
            android:textColor="#000000"
            android:textSize="14sp" />


        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="end"
            android:textStyle="bold"
            android:text="Performance Bonus"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/bv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/rate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/pb"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:gravity="end"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#019ac1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center"
        android:text="Down Line Performance Bonus"
        android:textColor="@color/white"
        android:textSize="16sp" />
    </FrameLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/recycler_item2"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            tools:itemCount="2"
            android:id="@+id/rv2" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:cardBackgroundColor="@color/black"
            android:layout_marginTop="50dp"
            android:elevation="2dp"
            app:cardCornerRadius="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/net"
            android:layout_marginBottom="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="17dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="11"
                android:layout_height="match_parent"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:gravity="end"
                android:text="Net Performance Bonus :"
                android:textColor="#000000"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/total"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:text="0"
                android:gravity="end"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/tds"
            android:orientation="horizontal">



            <TextView
                android:layout_width="0dp"
                android:layout_weight="11"
                android:layout_height="match_parent"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:gravity="end"
                android:text="Less T.D.S. :"
                android:textColor="#000000"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/total2"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:gravity="end"
                android:text="0"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fe852e"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="13dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="11"
                    android:layout_height="60dp"
                    android:text="Net Payable Amount :"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/total1"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/lato"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:gravity="end|center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>
</LinearLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        ads:adSize="BANNER"
        ads:adUnitId="@string/admob_banner_id">
    </com.google.android.gms.ads.AdView>
</FrameLayout>